	head
		include utilis/metatags 
		script(src="https://kit.fontawesome.com/20f3c29ee8.js" crossorigin="anonymous")
		//- link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/tiny-slider.css')
